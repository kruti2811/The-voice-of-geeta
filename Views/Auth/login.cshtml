
@{
    ViewData["Title"] = "login";
}

<h1>login</h1>



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Divine Wisdom</title>
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="login-container">
        <!-- Left Side (Login Form) -->
        <div class="login-form">
            <h2>Login</h2>
            <p>Start Your Life with Divine Wisdom!</p>
            <img src="~\images\krishnaicon.png" alt="Krishna Icon" class="logo" />

            <input type="text" placeholder="Enter Your Username" class="input-field">
            <input type="password" placeholder="Enter Your Password" class="input-field">

            <button class="submit-btn">Submit</button>

            <p class="forgot-password">Forgot Password ?</p>
        </div>

        <!-- Right Side (Image Section) -->
        <div class="image-section">
            <img src="~\images\bhgvad_geeta1.png" alt="Bhagavad Gita" class="right-image">
        </div>
    </div>
</body>
</html>


