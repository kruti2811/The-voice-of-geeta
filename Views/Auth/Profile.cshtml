@{
}
@model The_voice_of_geeta.Models.Usermodel
@{
    ViewData["Title"] = "User Profile";
}

<h2 style="text-align:center; margin-top:50px;">👤Profile</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" style="text-align: center;">
        @TempData["SuccessMessage"]
    </div>
}

<div style="max-width: 500px; margin: auto; border-radius: 10px;">
    <p><strong>Username:</strong> @Model.Username</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Joined On:</strong> @Model.CreatedAt.ToString("dd MMM yyyy")</p>

    <div style="margin-top: 20px;">
        <a class="btn btn-warning" href="@Url.Action("EditProfile", "Auth")">✏️ Edit Profile</a>
        <a class="btn btn-secondary" href="@Url.Action("Logout", "Auth")" style="margin-left: 10px;">Logout</a>
    </div>
</div>
