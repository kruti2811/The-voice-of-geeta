@model The_voice_of_geeta.Models.Usermodel

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Your Wisdom</title>
    <link rel="stylesheet" href="~/css/register.css" />
</head>
<body>
    <form asp-action="register" method="post">
        <div class="container">
            <!-- Left Side (Form Section) -->
            <div class="form-section">
                <h2>Create Your Wisdom</h2>
                <p>Start Your Life with Divine Wisdom!</p>
                <img src="~/images/krishnaicon.png" alt="Krishna Icon" class="logo" />

                <input asp-for="Username" type="text" placeholder="Enter Your Name" class="input-field" required />
                <span asp-validation-for="Username" class="text-danger"></span>

                <input asp-for="Email" type="email" placeholder="Enter Your Email" class="input-field" required />
                <span asp-validation-for="Email" class="text-danger"></span>

                <input asp-for="Password" type="password" placeholder="Enter Your Password" class="input-field" required />
                <span asp-validation-for="Password" class="text-danger"></span>

                <button type="submit" class="submit-btn">Register</button>
            </div>

            <!-- Right Side (Image Section) -->
            <div class="image-section">
                <img src="~/images/register.jpg" alt="Krishna Sunset" class="background-image">
            </div>
        </div>
    </form>
    @section Scripts {
        <script>
            console.log("Register page scripts loaded.");
        </script>
    }

    </body>
</html>