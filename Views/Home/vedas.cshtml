@{
    ViewData["Title"] = "The Vedas";
}

<div class="container">
    <h2>📖 <span class="title">The Vedas</span></h2>
    <div class="vedas-list">
        <div class="veda-item">
            <button class="veda-btn">Rigveda</button>
            <div class="veda-content">
                हमेशा सत्य और ज्ञान की तलाश करें, विविध इतिहासों का सम्मान करें और प्रकृति के साथ सद्भाव में रहें।
            </div>
        </div>
        <div class="veda-item">
            <button class="veda-btn">Samaveda</button>
            <div class="veda-content">
                संगीत और मंत्रों की शक्ति का उपयोग करें, आध्यात्मिक जागरूकता को बढ़ावा दें।
            </div>
        </div>
        <div class="veda-item">
            <button class="veda-btn">Yajurveda</button>
            <div class="veda-content">
                अनुष्ठानों और यज्ञों के माध्यम से अपने कार्यों को शुद्ध करें और समाज की भलाई के लिए सेवा करें।
            </div>
        </div>
        <div class="veda-item">
            <button class="veda-btn">Atharvaveda</button>
            <div class="veda-content">
                जीवन में व्यावहारिक ज्ञान अपनाएं, स्वास्थ्य और समृद्धि के लिए प्रयास करें।
            </div>
        </div>
    </div>
</div>
