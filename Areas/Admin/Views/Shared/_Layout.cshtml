<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - The Voice of Geeta</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background-color: #343a40;
            color: white;
            padding-top: 20px;
            position: fixed;
        }

            .sidebar a {
                color: white;
                display: block;
                padding: 10px;
                text-decoration: none;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            margin-left: 260px;
            padding: 20px;
            width: 100%;
        }

        .topbar {
            background-color: #212529;
            color: white;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="text-center">
            <img src="/images/logo.png" alt="Project Logo" width="50">
            <h4>The Voice of Geeta</h4>
        </div>
        <ul class="nav-links">
        <li> <a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
            <li> <a href="@Url.Action("DailyShlokas", "Admin")">Daily Shlokas</a></li>
            <li> <a href="@Url.Action("ActiveUsers", "Admin")">Active Users</a></li>
            <li> <a href="@Url.Action("Profile", "Admin")">Profile</a></li>
        @* <a asp-controller="AdminAuth" asp-action="Login">Logout</a> *@

        </ul>
    </div>
    <div class="content">
        <div class="topbar">Admin Panel</div>
        @RenderBody()
    </div>
</body>
</html>
