@model The_voice_of_geeta.Areas.Admin.Models.Shloka

<h2>Edit Shloka</h2>
<form asp-action="EditShloka" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Adhyay Number</label>
        <input type="number" asp-for="AdhyayNumber" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Shloka Description</label>
        <textarea asp-for="ShlokaDescription" class="form-control" rows="5"></textarea>
    </div>

    <div class="mb-3 form-check">
        <input type="checkbox" asp-for="IsVisible" class="form-check-input" />
        <label class="form-check-label">Show to users</label>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
</form>
