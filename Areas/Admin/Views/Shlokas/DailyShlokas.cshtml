@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center;">Admin Dashboard</h2>

<table style="width: 90%; margin: auto; border-collapse: collapse; text-align: center; border: 1px solid #e0e0e0;">
    <thead style="background-color: #f9f9f9;">
        <tr style="border: 1px solid #e0e0e0;">
            <th style="padding: 10px;">Number</th>
            <th style="padding: 10px;">Adhyay</th>
            <th style="padding: 10px;">Shlokas Description</th>
            <th style="padding: 10px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr style="border: 1px solid #e0e0e0;">
            <td style="padding: 10px;">1</td>
            <td style="padding: 10px;">7</td>
            <td style="padding: 10px; text-align: left;">
                श्रीमद्भगवद गीता के दूसरे अध्याय के तीसरे श्लोक में कहा गया है,<br />
                "हे अर्जुन! मूर्खता को मत प्राप्त हो, तुम्हें यह उचित नहीं जान पड़ती।<br />
                हे परन्तप! हृदय की तुच्छ दुर्बलता को त्यागकर युद्ध के लिए खड़ा हो जा"।
            </td>
            <td style="padding: 10px;">
                <button style="background-color: #4CAF50; color: white; border: none; padding: 5px 10px; border-radius: 4px; margin-right: 5px;">Show</button>
                <button style="background-color: #f44336; color: white; border: none; padding: 5px 10px; border-radius: 4px;">Hide</button>
            </td>
        </tr>
        <!-- Add more rows dynamically from model later -->
    </tbody>
</table>

<div style="text-align: right; width: 90%; margin: 20px auto;">
    <a href="@Url.Action("AddShlokas", "Shlokas", new { area = "Admin" })">
        <button style="background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 6px; font-size: 14px;">
            Add new Shlokas
        </button>
    </a>
</div>
